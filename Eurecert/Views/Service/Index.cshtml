@model IEnumerable<Eurecert.Models.Service>

@{
    ViewData["Title"] = "Index";
}

<h2>Hizmet</h2>

<p>
    <a asp-action="Create">Yeni Hizmet</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ServiceName)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Düzenle</a> 
                <a asp-action="Details" class="btn btn-default" asp-route-id="@item.Id">Detaylar</a> 
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
