@model IEnumerable<Eurecert.Models.PublicityMethod>

@{
    ViewData["Title"] = "Tanıtım Yöntemi";
}

<h2>Tanıtım Yöntemi</h2>

<p>
    <a class="btn btn-default" asp-action="Create">Tanıtım Yöntemi Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">DÜzenle</a> 
                <a class="btn btn-default" asp-action="Details" asp-route-id="@item.Id">Detaylar</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
